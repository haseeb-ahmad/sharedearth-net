.container-fluid.header-after-login
	.row-fluid
		.span5
			%ul
				%li=link_to "Notification", "#"
				%li Community
		.span4.header-middle-icons.clearfix
			%ul
				=current_user.person.trusted_network.size
				%li=image_tag"connection_icon.png"
				=current_user.person.reputation_rating.gift_actions_count.to_s.to_s
				%li=image_tag"gift_icon.png"
				=current_user.person.items.count
				%li=image_tag"leaf_icon.png"
				%li
				-feedback_rating = current_user.person.reputation_rating.feedback_rating?
				=feedback_rating.nil? ? "n/a" : (feedback_rating.to_s + "%")
				%li=image_tag"thumb_icon.png"

		.span3.setting-icon.clearfix
			.span9
				.row-fluid
					=current_user.name
				.row-fluid
					=link_to image_tag("setting_icon.png"), "#"
			.span1
			.span2
				= image_tag current_user.avatar(:square), :class => "thumb"

